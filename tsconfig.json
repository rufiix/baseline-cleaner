{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    
    "moduleResolution": "node16"
  },
 "include": [
  "src/**/*.ts",
  "src/**/*.tsx"
],
  "exclude": [
    "node_modules",
    "dist"
  ]
}